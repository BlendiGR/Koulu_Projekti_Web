generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/**
 * ---------- ENUMS ----------
 */

enum OrderStatus {
  PREPARING
  DELIVERING
  DELIVERED
}

enum ProductType {
  FOOD
  DRINK
  SIDE
}

enum UserRole {
  CUSTOMER
  ADMIN
}

/**
 * ---------- MODELS ----------
 */

model User {
  userId    Int      @id @default(autoincrement()) @map("user_id")
  username  String   @unique
  role      UserRole @default(CUSTOMER)
  email     String   @unique
  password  String
  locale    String   @default("en")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  reviewed Boolean @default(false)

  orders Order[]

  @@map("users")
}

model Order {
  orderId            Int         @id @default(autoincrement()) @map("order_id")
  status             OrderStatus @default(PREPARING)
  cost               Decimal
  destinationAddress String      @map("destination_address")
  createdAt          DateTime    @default(now()) @map("created_at")
  completedAt        DateTime?   @map("completed_at")
  phone              String      @map("phone")

  userId Int  @map("order_user_id")
  user   User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  orderer String @default("") @map("orderer_name")

  orderProducts OrderProduct[]

  @@map("orders")
}

model Product {
  productId   Int         @id @default(autoincrement()) @map("product_id")
  type        ProductType @default(FOOD)
  name        String      @unique
  cost        Decimal
  diets       Json
  imageUrl    String      @map("image_url")
  ingredients Json
  isActive    Boolean     @default(true) @map("is_active")

  orderProducts OrderProduct[]

  @@map("products")
}

model Review {
  reviewId  Int      @id @default(autoincrement()) @map("review_id")
  rating    Int
  review    String   @db.Text
  isActive  Boolean  @default(false) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  reviewer String @default("") @map("reviewer_name")

  @@map("reviews")
}

model OrderProduct {
  orderId   Int @map("order_id")
  productId Int @map("product_id")
  quantity  Int @default(1) @map("quantity")

  order   Order   @relation(fields: [orderId], references: [orderId])
  product Product @relation(fields: [productId], references: [productId])

  @@id([orderId, productId])
  @@map("order_products")
}

model Announcement {
  id      Int    @id @default(autoincrement())
  title   String
  message String

  isActive    Boolean  @default(true)
  isSingleton Boolean  @unique @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("announcements")
}

model Coupon {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  discount  Decimal
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("coupons")
}